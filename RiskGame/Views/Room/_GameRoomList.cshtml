@model IEnumerable<RiskGame.Models.GameRoomModel>

    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.GameRoomId)</th>
            <th>
                @Html.DisplayNameFor(model => model.GameRoomName)
            </th>
            <th>
                @Html.Raw("Player")
            </th>
            <th>
                @Html.Raw("Join")
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameRoomId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameRoomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player) / @Html.DisplayFor(modelItem => item.MaxPlayer)
                </td>
                <td>
                   @Html.ActionLink("Join", "JoinRoom", new { id = item.GameRoomId }, new { @class="btn btn-primary"})



                </td>

            </tr>
        }
    </table>