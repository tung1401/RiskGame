@model RiskGame.Models.RiskDataModel
@using RiskGame.Helper
@{
    ViewBag.Title = "Admin DashBoard";
}

<h2>Admin DashBoard</h2>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Risks</strong>

                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-10">
                               
                            </div>
                            <div class="col-md-2  text-right">
                                <a href="@Url.Action("AddRisk","AdminDashboard")" class="btn btn-success"><i class="fa fa-plus"></i> Add Risk</a>
                            </div>
                        </div>
                        <table id="bootstrap-data-table2" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Risk Id</th>
                                    <th>Risk Name</th>
                                    <th>Risk Detail</th>
                                    <th>Risk Type</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RiskData.OrderBy(x => x.RiskId))
                                {
                                <tr>
                                    <td>@item.RiskId</td>
                                    <td>@item.Name</td>
                                    <td>@item.RiskDetail</td>
                                    <td><p>@item.RiskType </p></td>
                                    <td>
                                        <a href="@Url.Action("EditRisk","AdminDashboard")?id=@item.RiskId" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->


<script src="~/Content/sufee/assets/js/lib/data-table/datatables.min.js"></script>
<script src="~/Content/sufee/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
<script src="~/Content/sufee/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
